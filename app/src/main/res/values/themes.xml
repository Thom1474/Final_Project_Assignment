<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Projectmahdi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorPrimaryDark">@color/my_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/my_statusbar</item>

        <item name="android:textColor">@color/my_text</item>

        /item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Projectmahdi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Projectmahdi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Projectmahdi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>